<processor>

	<extractTag out="date">
		<pattern><![CDATA[<p class="author">]]></pattern> 
		<occurrence>0</occurrence>
	</extractTag>
	
	<getGroup in="date" out="date">
		<pattern><![CDATA[</strong>(.+?)$]]></pattern> 
		<occurrence>0</occurrence>
	</getGroup>
	
	<getGroup in="date" out="date">
		<pattern><![CDATA[\s(?:on){0,1}\s*?(.+?)$]]></pattern> 
		<occurrence>0</occurrence>
	</getGroup>
	
	<getGroup in="date" >
		<pattern><![CDATA[^\s*(.+?)\s*$]]></pattern> 
		<occurrence>0</occurrence>
	</getGroup>
	
</processor>