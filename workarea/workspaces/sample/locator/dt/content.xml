<?xml version="1.0" encoding="cp1251"?>

<processor>
	
	<!-- Получение текста статьи -->
	<xPath out="article">
		<expression>/body/div[@id='out']/div[@class='print-page']/div[@class='wrart']/div[@class='wrart-2']/div[@class='inner']</expression>
	</xPath>
	
	<!-- Получение крайних комментариев оставленных посетителями -->
	<xPath out="comments">
		<expression>/body/div[@id='out']/div[@class='print-page']/div[@id='statyacomment']</expression>
	</xPath>
	
	<!-- Склеивание всего этого вместе -->
	<concat first="article" second="comments"/>
	
</processor>