<?xml version="1.0" encoding="cp1251"?>

<processor>

	<!-- Загрузка XML кода RSS-ленты в переменную rss-->
	<load out="rss">
		<url>http://www.dt.ua/export.rss</url>
	</load>
	
	<!-- С помощью регулярного выражения выкусываем items и 
	сохраняем их все в элементах переменной items-->
	<getGroup in="rss" out="items">
		<pattern><![CDATA[<item>(.+?)</item>]]></pattern>
		<occurrence>-1</occurrence>
	</getGroup>
	
	<!-- С помощью другого регулярного выражения выкусываем из каждой item адрес статьи на сайте и 
	сохраняем все полученные адреса в элементах выходной переменной по умолчанию -->
	<getGroup in="items">
		<pattern><![CDATA[<link>(.+?)</link>]]></pattern>
		<occurrence>-1</occurrence>
	</getGroup>
	
</processor>